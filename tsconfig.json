{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "removeComments": true,
    "importHelpers": true,
    "strict": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "include": [
    "./src",
    "./test",
    "./package.json",
    "./types.d.ts"
  ],
  "files": [
    "types.d.ts"
  ],
  "incremental": true,
  "typeAcquisition": {
    "enable": false
  }
}